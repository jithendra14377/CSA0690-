#include<stdio.h>
int main()
{
	int n, sum = 0, num = 0;
	printf("Check whether the number is perfect or not : ");
	scanf("%d" , &n);
	for(int i = 0; i < n;i ++)
	{
		num = n % i;
		if(num == 0)
		sum = sum + i;
	}
	if(sum == n)
	{
		printf("%d is a perfect number" , n);
	}
	else
	{
		printf("%d is a not perfect number" , n);
	}
}
