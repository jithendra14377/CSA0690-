#include<stdio.h>
int main()
{
	int n, a[n], max = 0, min = 0;
	printf("Number of elements in the array : ");
	scanf("%d" , &n);
	printf("The elements of the array : \n");
	for(int i = 0; i < n; i++)
	{
		scanf("%d" , &a[i]);
	}
	for(int i = 0; i < n; i++)
	{
		if(i == 0)
		{
			max = a[i];
			min = a[i];
		}
		if(max < a[i])
		{
			max = a[i];
		}
		if(min > a[i])
		{
			min = a[i];
		}
	}
	printf("The maximum element of the array is : %d\n" , max);
	printf("The minimum element of the array is : %d" , min);
}
